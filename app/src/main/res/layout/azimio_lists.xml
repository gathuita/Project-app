<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/memberimg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/azimio"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        tools:ignore="MissingClass" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/memberimg"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/classtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/memberimg"
            android:layout_toRightOf="@+id/memberimg"
            android:maxLines="1"
            android:text="Party Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/memberclass"
            android:text="Party Leader"
            android:textSize="17sp"
            android:maxLines="1"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classtxt"
            android:layout_alignLeft="@+id/classtxt"
            android:layout_alignStart="@+id/classtxt" />

    </LinearLayout>

</RelativeLayout>